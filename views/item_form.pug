extends layout 

block content 
  h2= title 

  form(method='POST' action='')
    div.form-group
      p Choose a category:      
      label(for='Computers') Computers
      input#category.form-control(type='radio', name='category', value='Computers')
      label(for='Phones') Phones  
      input#category.form-control(type='radio', name='category', value='Phones')
      label(for='Consoles') Consoles  
      input#category.form-control(type='radio', name='category', value='Consoles')
    div.form-group 
      label(for='name') Product name: 
      input#name.form-control(type='text', name='name', value=(undefined===item ? '' : item.name))
    div.form-group 
      label(for='price') Product price: 
      input#price.form-control(type='number', name='price', value=(undefined===item ? '' : item.price))
    div.form-group
      label(for='stock') Product quantity:
      input#stock.form-control(type='number', name='stock', value=(undefined===item ? '' : item.stock))
    div.form-group 
      label(for='manufacturer') Product manufacturer:
      input#manufacturer.form-control(type='text', name='manufacturer', value=(undefined===item ? '' : item.manufacturer))
    div.form-group 
      label(for='ssd') Product ssd size:
      input#sdd.form-control(type='text', name='ssd', value=(undefined===item ? '' : item.ssd))
    div.form-group 
      label(for='ram') Product ram size:
      input#ssd.form-control(type='text', name='ram', value=(undefined===item ? '' : item.ram))
    div.form-group 
      label(for='screen_size') Product screen size:
      input#screen_size.form-control(type='text', name='screen_size', value=(undefined===item ? '' : item.screen_size))
    button.btn.btn-primary(type='submit') Submit
  
  if errors
    ul
      for error in errors
        li!= error.msg
